{
    "version": 2,
    "build": {
      "env": {
        "BUILDING_FOR_NOW": "true"
      }
    },
    "builds": [
      { "src": "frontend/about/package.json", "use": "@now/next" },
      { "src": "frontend/home/package.json", "use": "@now/next" }
    ],
    "routes": [
      { "src": "/about(.*)", "dest": "about$1" },
      { "src": "(.*)", "dest": "home$1" }
    ]
  }